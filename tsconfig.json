{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules/*",
  ],
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": "./",
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "ignoreDeprecations": "5.0",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["svelte", "vitest/globals"]
  }
}
